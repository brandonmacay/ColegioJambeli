<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:statusBarColor">@color/blanco</item>
        <item name="android:windowLightStatusBar" tools:targetApi="23">true</item>
    </style>

    <style name="DocenteStyle" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/rojo</item>
        <item name="colorPrimaryDark">@color/rojoscuro</item>
        <item name="colorAccent">@color/rojoscuro</item>
    </style>

    <style name="TabTextAppearance" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/verde</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="EstudianteStyle" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/verde</item>
        <item name="colorPrimaryDark">@color/verdeoscuro</item>
        <item name="colorAccent">@color/verdeoscuro</item>
    </style>

</resources>
