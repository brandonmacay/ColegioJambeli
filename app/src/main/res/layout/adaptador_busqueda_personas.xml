<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clickable="true"
    android:orientation="vertical"
    android:padding="10dp"
    android:focusable="true">
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/circleImageView_search_user"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:foregroundGravity="center_vertical"
            android:src="@mipmap/ic_launcher_round" />
        <TextView
            android:textColor="@android:color/black"
            android:id="@+id/search_user_name"
            android:layout_width="wrap_content"
            android:layout_gravity="center_vertical"
            android:gravity="center_vertical"
            android:layout_height="match_parent"
            android:layout_marginStart="12dp"
            android:text="Brandon Macay"
            android:textAppearance="?android:attr/textAppearanceMedium"
            />

        <TextView
            android:id="@+id/tipo_area"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:text="   -   Estudiante"
            android:textSize="11sp"
            android:textColor="@color/colorPrimary"
            />
    </LinearLayout>
   <TextView
       android:id="@+id/area_user"
       android:layout_weight="1"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:text="3 B aplicaciones informaticas"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textColor="#7C84EC"
        />

</LinearLayout>